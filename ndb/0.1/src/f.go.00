package main


import (
	"./item"
	"./io"
)


func main() {
	n := io.Open("/home/pau/dev/go/test/file/foo.ndb")
	defer n.Close()

	i := item.New(n)
	il := make([]byte, 3)

	il[0] = i.Append(0, []byte("example 1: hello world"))
	il[1] = i.Append(il[0], []byte("example 2: peter green's fleetwood mac"))
	il[2] = i.Append(il[1], []byte("example 3: I wish what is wrong with me"))

	for _, v := range il {
		i.Read(v)
		i.Dump()
	}
}

